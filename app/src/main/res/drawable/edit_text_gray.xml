<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:state_focused="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="#FFFFFF" />
            <stroke android:width="0.7dip" android:color="#1058ff" />
            <corners android:radius="4dip" />
            <padding android:bottom="7dip" android:left="7dip" android:right="7dip" android:top="7dip" />
        </shape>
    </item>

    <item android:state_pressed="true" android:state_focused="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="#F6F6F6" />
            <stroke android:width="0.7dip" android:color="#d0d0d0" />
            <corners android:radius="4dip" />
            <padding android:bottom="7dip" android:left="7dip" android:right="7dip" android:top="7dip" />
        </shape>
    </item>

    <item android:state_pressed="false" android:state_focused="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="#FFFFFF" />
            <stroke android:width="0.7dip" android:color="#1058ff" />
            <corners android:radius="4dip" />
            <padding android:bottom="7dip" android:left="7dip" android:right="7dip" android:top="7dip" />
        </shape>
    </item>

    <item android:state_pressed="false" android:state_focused="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="#F6F6F6" />
            <stroke android:width="0.7dip" android:color="#d0d0d0" />
            <corners android:radius="4dip" />
            <padding android:bottom="7dip" android:left="7dip" android:right="7dip" android:top="7dip" />
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape>
            <padding android:left="8dp" android:top="4dp" android:right="4dp" android:bottom="4dp" />
        </shape>
    </item>
</selector>