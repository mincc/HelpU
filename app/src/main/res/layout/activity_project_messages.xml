<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/rlMainView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.example.chungmin.helpu.activities.ProjectMessages">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/llUserInfo"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"></LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/llCustomerRequest"
            android:layout_below="@+id/llUserInfo"
            android:orientation="vertical"
            android:layout_marginBottom="10dp"></LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/llServiceProvider"
            android:layout_below="@+id/llCustomerRequest"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:orientation="vertical"
            android:layout_marginBottom="30dp"></LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/llWaitingConfirmation"
            android:layout_below="@+id/llServiceProvider"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/green_box"
                android:id="@+id/tvMessageBox"
                android:textColor="#000000"
                android:textStyle="bold"
                android:padding="20dp"
                android:layout_alignBottom="@+id/llWaitingConfirmation" />
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/btnTask"
            android:layout_below="@+id/llWaitingConfirmation"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:visibility="gone"
            style="@style/btnStyleBeige" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" No Deal "
            android:id="@+id/btnCancel"
            android:layout_below="@+id/btnTask"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:visibility="gone"
            style="@style/btnStyleBeige" />

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/llRating"
            android:layout_below="@+id/btnTask"
            android:visibility="gone"></LinearLayout>

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/llCreateQuotation"
            android:layout_below="@+id/btnTask"
            android:visibility="gone"></LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Gateway"
            android:id="@+id/btnPaymentGateway"
            android:layout_below="@+id/btnTask"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            style="@style/btnStyleBeige" />

        <TextView
            android:id="@+id/txtResultTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_below="@+id/btnPaymentGateway"
            android:visibility="gone"
            android:textColor="#ff0000" />

        <TextView
            android:id="@+id/txtResultDescription"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_below="@+id/txtResultTitle"
            android:visibility="gone"
            android:textColor="#0000ff" />

        <TextView
            android:id="@+id/txtResultDetails"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_below="@+id/txtResultDescription"
            android:visibility="gone"
            android:background="#000000"
            android:textColor="#00ff00" />

        <!--<ProgressBar-->
        <!--android:id="@+id/progressBar"-->
        <!--style="?android:attr/progressBarStyleInverse"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:visibility="visible"-->
        <!--android:indeterminateDrawable="@drawable/progress"-->
        <!--android:layout_gravity="right" />-->

    </RelativeLayout>

</ScrollView>