<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <include layout="@layout/basic_customer_info" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Enter "
        android:id="@+id/btnChangeState"
        style="@style/btnStyleBeige"
        android:layout_marginTop="17dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/btnRemoveFromView"
        android:layout_below="@+id/btnChangeState"
        android:layout_alignLeft="@+id/btnChangeState"
        android:layout_alignStart="@+id/btnChangeState"
        android:layout_marginTop="17dp"
        android:visibility="gone"
        style="@style/btnStyleBeige" />
</RelativeLayout>