<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="fragments.CreateQuotationFragment">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llCustomerRequest">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/strDone"
            android:id="@+id/btnDone"
            android:layout_below="@+id/lblQuotation"
            android:layout_toRightOf="@+id/lblQuotation"
            android:layout_toEndOf="@+id/lblQuotation"
            android:layout_marginTop="35dp"
            style="@style/btnStyleBeige" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/etQuotation"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@+id/btnDone"
            android:layout_alignStart="@+id/btnDone"
            android:inputType="numberDecimal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/strQuotationRM"
            android:id="@+id/lblQuotation"
            android:layout_alignBaseline="@+id/etQuotation"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

</FrameLayout>
