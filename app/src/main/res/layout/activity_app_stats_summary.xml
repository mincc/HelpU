<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.chungmin.helpu.activities.AppStatsSummary">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tlInfo">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item"
                android:id="@+id/lblItem"
                android:layout_column="1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Day"
                android:id="@+id/lblDay"
                android:layout_column="2"
                android:layout_weight="1" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Week"
                android:id="@+id/lblWeek"
                android:layout_column="3"
                android:layout_weight="1" />

            <TextView
                android:text="Month"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/lblMonth"
                android:layout_column="4"
                android:layout_weight="1" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ttl Cust. Req"
                android:id="@+id/lblTotalCustomerRequest"
                android:layout_column="1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/tvTtlCustReqtDay"
                android:layout_column="2"
                android:layout_weight="1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/tvTtlCustReqtWeek"
                android:layout_column="3"
                android:layout_weight="1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/tvTtlCustReqtMonth"
                android:layout_column="4"
                android:layout_weight="1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ttl Serv. Provider"
                android:id="@+id/lblTotalServiceProvider"
                android:layout_column="1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/tvTtlServPdrDay"
                android:layout_column="2"
                android:layout_weight="1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/tvTtlServPdrWeek"
                android:layout_column="3"
                android:layout_weight="1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/tvTtlServPdrMonth"
                android:layout_column="4"
                android:layout_weight="1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ttl Cust. Req Done"
                android:id="@+id/lblTotalCustomerRequestDone"
                android:layout_column="1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/tvTtlCustReqDoneDay"
                android:layout_column="5"
                android:layout_weight="1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/tvTtlCustReqDoneWeek"
                android:layout_column="6"
                android:layout_weight="1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/tvTtlCustReqDoneMonth"
                android:layout_column="7"
                android:layout_weight="1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ttl Quotation"
                android:id="@+id/lblTotalQuotation"
                android:layout_column="1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/tvTtlQuotationDay"
                android:layout_column="5"
                android:layout_weight="1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/tvTtlQuotationWeek"
                android:layout_column="6"
                android:layout_weight="1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/tvTtlQuotationMonth"
                android:layout_column="7"
                android:layout_weight="1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ttl User"
                android:id="@+id/lblTotalUser"
                android:layout_column="1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/tvTtlUserDay"
                android:layout_column="5"
                android:layout_weight="1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/tvTtlUserWeek"
                android:layout_column="6"
                android:layout_weight="1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/tvTtlUserMonth"
                android:layout_column="7"
                android:layout_weight="1" />
        </TableRow>

    </TableLayout>

</LinearLayout>
