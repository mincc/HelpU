<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/customer_request_custom_list">

    <TextView
        android:id="@+id/lblCustomerRequestId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/strCustomerRequestID" />

    <TextView
        android:id="@+id/tvCustomerRequestId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/lblCustomerRequestId"
        android:layout_toEndOf="@id/lblCustomerRequestId" />

    <TextView
        android:id="@+id/lblServiceType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/strServiceNeeded"
        android:layout_below="@+id/lblCustomerRequestId" />

    <TextView
        android:id="@+id/tvService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblCustomerRequestId"
        android:layout_toRightOf="@id/lblCustomerRequestId"
        android:layout_toEndOf="@id/lblCustomerRequestId" />

    <TextView
        android:id="@+id/lblProjectStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/strProjectStatus"
        android:layout_below="@+id/lblServiceType" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvProjectStatus"
        android:layout_below="@id/lblServiceType"
        android:layout_toRightOf="@id/lblCustomerRequestId"
        android:layout_toEndOf="@id/lblCustomerRequestId" />

    <TextView
        android:id="@+id/lblDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/strDescription"
        android:layout_below="@id/lblProjectStatus" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblDescription" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvDescription">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/strServiceProviderID"
            android:id="@+id/lblServiceProviderId" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvServiceProviderId"
            android:layout_gravity="center_horizontal"
            android:layout_alignBaseline="@+id/lblServiceProviderId"
            android:layout_alignBottom="@+id/lblServiceProviderId"
            android:layout_toRightOf="@+id/lblServiceProviderId"
            android:layout_toEndOf="@+id/lblServiceProviderId"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/strQuotationRM"
            android:id="@+id/lblQuotation"
            android:layout_below="@+id/lblServiceProviderId"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:singleLine="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:id="@+id/tvQuotation"
            android:layout_alignTop="@+id/lblQuotation"
            android:layout_alignLeft="@+id/tvServiceProviderId"
            android:layout_alignStart="@+id/tvServiceProviderId" />
    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/strEnter"
        android:id="@+id/btnEnter"
        style="@style/btnStyleBeige"
        android:layout_marginTop="17dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/strDelete"
        android:id="@+id/btnRemoveFromView"
        android:layout_below="@+id/btnEnter"
        android:layout_alignLeft="@+id/btnEnter"
        android:layout_alignStart="@+id/btnEnter"
        android:layout_marginTop="17dp"
        android:visibility="gone"
        style="@style/btnStyleBeige" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvLocBadge"
        android:layout_marginTop="12dp"
        android:text="   "
        android:layout_marginRight="38dp"
        android:layout_marginEnd="38dp"
        android:layout_below="@+id/btnEnter"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="10dp" />
</RelativeLayout>