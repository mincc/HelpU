<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.chungmin.fragment.CustomerRequestPickServiceProvider">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/llCustomerRequest"
        android:orientation="vertical"
        android:layout_marginBottom="10dp">
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/llServiceProvider"
        android:layout_below="@+id/llCustomerRequest"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="vertical">
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/llWaitingConfirmation"
        android:layout_below="@+id/llServiceProvider"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please wait for selected Service Provider Reply."
            android:background="@drawable/green_box"
            android:id="@+id/tvMessageBox"
            android:textColor="#000000"
            android:textStyle="bold"
            android:padding="20dp"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
</RelativeLayout>
